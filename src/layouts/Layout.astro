---
import Sidebar from "../components/Sidebar/Sidebar";
import { HOME_LINK } from "../globalStore";
import MetadataLayout from "./MetadataLayout.astro";

interface Props {
  headerType: "empty" | "boxed";
}
const { headerType } = Astro.props;

const $HOME_LINK = HOME_LINK.get();
---

<MetadataLayout>
  <body>
    <!-- / -->
    <!--Overlay-->
    <header class=`app-header app-header-1 ${headerType}`>
      <div class="container">
        <div class="header-wrap">
          <div class="header-menu">
            <ul>
              <li>
                <a href="page-about">
                  <span class="text">About</span>
                  <span class="icon fa fa-angle-left"></span>
                </a>
              </li>
              <li>
                <a href="page-contact">
                  <span class="text">Contact Us</span>
                  <span class="icon fa fa-angle-left"></span>
                </a>
              </li>
              <li>
                <a href="page-faq">
                  <span class="text">FAQ</span>
                  <span class="icon fa fa-angle-left"></span>
                </a>
              </li>

              <li>
                <a href="blogs">
                  <span class="text">Blog</span>
                  <span class="icon fa fa-angle-left"></span>
                </a>
              </li>
            </ul>
          </div>
          <div class="header-logo">
            <a href="/" class="primary-logo">
              <span class="text-1">Hi Up</span>
              <span class="text-2"></span>
            </a>
          </div>
          <div class="header-links flex justify-end gap-3">
            <a
              href="/#:~:text=Australia%27s%20%231%20Top%20Rated%20Tutors"
              class="hidden md:flex button button-md button-light button-line-primary"
            >
              <span class="title">Book Now!</span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <Sidebar headerType={headerType} client:load />

    <slot name="body-content" />

    <footer class="section app-footer app-footer-2">
      <div class="footer-widgets">
        <div class="container">
          <div class="footer-widgets-links text-center">
            <div class="row row-xl-5 justify-center">
              <div class="col-6 col-sm-6 col-md-3 col-lg-3 col-xl-3">
                <div class="widget widget-links">
                  <div class="widget-title">
                    <h4>Quick Access</h4>
                  </div>
                  <div class="widget-body">
                    <ul>
                      <li>
                        <a href={$HOME_LINK}>
                          <span class="icon ti-angle-left"></span>
                          <span class="text">Home</span>
                        </a>
                      </li>
                      <li>
                        <a href="page-about">
                          <span class="icon ti-angle-left"></span>
                          <span class="text">About</span>
                        </a>
                      </li>
                      <li>
                        <a href="page-contact">
                          <span class="icon ti-angle-left"></span>
                          <span class="text">Contact Us</span>
                        </a>
                      </li>
                      <li>
                        <a href="page-faq">
                          <span class="icon ti-angle-left"></span>
                          <span class="text">FAQ</span>
                        </a>
                      </li>
                      <li>
                        <a href="page-blogs">
                          <span class="icon ti-angle-left"></span>
                          <span class="text">Blogs</span>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
          <span class="footer-line"></span>
          <div class="row">
            <div class="col-md-8">
              <p>Â© 2024 All Rights Reserved</p>
            </div>

            <div class="col-md-4">
              <ul class="el-social-links">
                <li>
                  <a href="#">
                    <span class="fa fa-facebook"></span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <span class="fa fa-google"></span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <span class="fa fa-linkedin"></span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <span class="fa fa-twitter"></span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
    ></script>

    <script is:inline type="text/javascript" src="assets/js/main-scripts.js"
    ></script>
  </body>
</MetadataLayout>
