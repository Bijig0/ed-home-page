---
import CheckIcon from "../components/MainForm/CheckIcon";
import { HOME_LINK } from "../globalStore";
import Layout from "../layouts/Layout.astro";

const $HOME_LINK = HOME_LINK.get();
---

<Layout headerType="boxed">
  <div slot="body-content">
    <!--Sidenav-->
    <div class="app-sidenav app-sidenav-1">
      <!-- Sidenav content remains the same -->
    </div>
    <!--/-->
    <!--Wrapper-->
    <div class="app-wrapper">
      <div class="page page-inferior page-booking-complete">
        <!--Booking Complete Section-->
        <section
          class="section section-booking-complete section-booking-complete-1"
        >
          <div class="display-spacing">
            <div class="container">
              <div class="row">
                <div class="col-lg-8">
                  <div class="el-panel">
                    <div class="el-panel-body">
                      <div class="el-panel-title">
                        <h3>You're all set!</h3>
                      </div>
                      <div class="flex justify-center text-center items-center">
                        <div class="flex flex-col">
                          <div class="my-4"></div>
                          <div class="flex justify-center">
                            <CheckIcon enabled={true} size={48} />
                          </div>
                          <h1
                            class="text-white mb-0 text-4xl font-semibold leading-none tracking-tighter text-black lg:max-w-2xl"
                          >
                            You're all set!
                          </h1>
                          <div class="my-3"></div>
                          <p class="text-black text-xl">
                            Our team have received your booking and will be in
                            touch with you soon!
                          </p>
                          <a
                            href={$HOME_LINK}
                            class="button button-primary px-16 py-3 text-xl"
                          >
                            Back to home
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="el-panel el-panel-teacher-info">
                    <div class="el-panel-body">
                      <div class="el-panel-title">
                        <h3>Quick Access</h3>
                      </div>
                      <ul class="el-list">
                        <li>
                          <a href="/">
                            <span class="text">Home</span>
                          </a>
                        </li>
                        <li>
                          <a href="page-about.html">
                            <span class="text">About us</span>
                          </a>
                        </li>
                        <li>
                          <a href="page-faq.html">
                            <span class="text">FAQ</span>
                          </a>
                        </li>
                        <li>
                          <a href="page-contact.html">
                            <span class="text">Contact us</span>
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!--/-->
      </div>
    </div>
  </div>
</Layout>
